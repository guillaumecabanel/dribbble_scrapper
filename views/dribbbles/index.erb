<h1>Dribbbles</h1>

<form action="/" method="get">
  <input type="text" name="query" placeholder="Search dribbles...">
  <input type="submit" value="Search">
</form>

<% if @dribbbles.any? %>
  <ul>
    <% @dribbbles.each do |dribbble| %>
      <li>
        <a href="<%= dribbble.url %>" target="_blank">
          <h3><%= dribbble.title %></h3>
          <p><%= dribbble.description %></p>
          <img src="<%= dribbble.image_url %>">
          <p><%= dribbble.author %></p>
        </a>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There is no dribbble for this request :(</p>
<% end %>
